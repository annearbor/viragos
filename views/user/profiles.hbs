<div class="search-form p-3 col-8">

  <h3>Search by location...</h3><br>
  <form action="/results" method="POST">
    <div class="form-group row align-items-center">
      <div class="col-auto input-category">
        <input type="text" placeholder="Search.." name="search">
      </div>
    </div>

    {{#each categories}}
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" value={{this}} name="category">
      <label class="form-check-label" for={{this}}>{{this}}</label>
    </div>
    {{/each}}

    <br> <br>
    <button type="submit" class="btn btn-primary">Start search</button>
  </form>
</div>


