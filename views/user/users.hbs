<div class="search-form p-4 col-8">
  <h1>Search by ...</h1>
</div>

<div class="search-form p-4 col-8">
  <form action="/results" method="POST">
    <h4>Location</h4>
    <div class="form-group row align-items-center">
      <div class="col-auto input-category">
        <input type="text" placeholder="Search.." name="search">
      </div>
    </div>

    {{#each categories}}
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" value={{this}} name="category">
      <label class="form-check-label" for={{this}}>{{this}}</label>
    </div>
    {{/each}}

    <br>
    <button type="submit" class="btn btn-primary">Start search</button>
    <br>


    <h4>Mentor ?</h4>

    <div class="form-group row align-items-center">
      <div class="col-auto input-category">
        <input type="checkbox" name="mentor" value="true">
      </div>
    </div>

    <h4>Languages</h4>

    <div class="form-group row align-items-center"></div>
    <div class="col-auto input-category">
      <input type="checkbox" name="languages" value="German"> German</br>
      <input type="checkbox" name="languages" value="English"> English</br>
      <input type="checkbox" name="languages" value="French"> French</br>
      <input type="checkbox" name="languages" value="Spanish"> Spanish</br>
      <input type="checkbox" name="languages" value="Italian"> Italian</br>
    </div>
</div>
</form>




{{!-- users.hbs (you should call this index.hbs) output is all users or result from the search--}}
<h2 class="text-center mt-4">Result(s) for your search...</h2>

<div class="container">
  <div class="row">

    {{#each results}}
    <div class="card col-sm-4 m-2" style="width: 18rem;">
      <img src="/images/IMG_0002.JPG" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{this.firstName}}</h5>
        <p class="card-text">{{this.interests}}</p>
        <p class="card-text">{{this.role}}</p>
        <p class="card-text">{{this.location}}</p>
        <a href="#" class="btn btn-primary">Show Profile</a>
      </div>
    </div>
    {{/each}}

  </div>
</div>


</div>
</div>
